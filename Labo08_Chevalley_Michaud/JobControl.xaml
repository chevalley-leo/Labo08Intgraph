<UserControl x:Class="Labo08_Chevalley_Michaud.Views.JobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#333">
    <Grid>
        <Border CornerRadius="10" Background="#444" Padding="20" Width="300" Height="300">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Job Management" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Boutons -->
                <Button Content="Charger les jobs" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" Click="LoadJobButton_Click"/>
                <Button Content="Démarrer le job" Width="100" HorizontalAlignment="Center" Click="StartJobButton_Click"/>

                <!-- Contenu du Job -->
                <TextBlock Text="Informations sur le job" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="JobInfoTextBox" Margin="0,0,0,10" Width="250" Height="30" />

                <!-- Liste des batches -->
                <ListBox x:Name="BatchListBox" Width="250" Height="150" Margin="0,10,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding ID}" Foreground="White"/>
                                <TextBlock Text="{Binding RecipeSummary}" Foreground="White"/>
                                <TextBlock Text="{Binding BucketCount}" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
